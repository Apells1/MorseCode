<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Morse1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Cool morse code machine" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Message" FontSize="Title" Padding="30,10,30,10" x:Name="message" HorizontalTextAlignment="Center"/>
        <Label Text="dots and dashes" FontSize="16" Padding="30,0,30,0" x:Name="DotsAndDashes" HorizontalTextAlignment="Center"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text=".Dot." ClassId="onDot"></Button>
            <Button Text="-Dash-" ClassId="onDash"></Button>
            <Button Text="| Space |" ClassId="onSpace"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
